{
  "name": "monjo",
  "description": "",
  "author": "SmartHR Language Infrastructure Development Team",
  "engines": {
    "node": "14.x"
  },
  "private": true,
  "setup": "yarn",
  "scripts": {
    "dev": "yarn run build-public-images:dev && next dev -p 3110",
    "build": "yarn run build-public-images:prod && yarn run clean-content-images && yarn run build-release-notes-json && next build",
    "start": "next start -p 3110",
    "test": "jest",
    "lint": "run-p lint:*",
    "lint:next": "next lint",
    "lint:eslint": "eslint './**/*.{ts,tsx}'",
    "lint:style": "stylelint './**/*.{ts,tsx}'",
    "lint:text": "textlint './src/**/*.{ts,tsx,md}'",
    "lint:markdown": "textlint ./content",
    "prepare": "husky install",
    "build-public-images:prod": "ts-node --project tsconfig-ts-node.json ./src/scripts/buildPublicImage/production.ts",
    "build-public-images:dev": "ts-node --project tsconfig-ts-node.json ./src/scripts/buildPublicImage/development.ts",
    "build-release-notes-json": "ts-node --project tsconfig-ts-node.json ./src/scripts/buildReleaseNotesJson.ts",
    "new-release-note": "ts-node --project tsconfig-ts-node.json ./src/scripts/createNewReleaseNote.ts",
    "clean-content-images": "find ./content -type f \\( -name '*.jpg' -o -name '*.png' -o -name '*.gif' -o -name '*.jpeg' \\) -delete"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "dayjs": "^1.11.2",
    "fast-glob": "^3.2.11",
    "hastscript": "^7.0.2",
    "js-yaml": "^4.1.0",
    "next": "12.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.3",
    "remark-directive": "^2.0.1",
    "remark-unwrap-images": "^3.0.1",
    "sharp": "^0.30.7",
    "smarthr-normalize-css": "^1.0.4",
    "smarthr-ui": "^21.1.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@svgr/webpack": "^6.2.1",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "16.11.41",
    "@types/react": "17.0.47",
    "@types/styled-components": "^5.1.25",
    "@types/uuid": "^8.3.4",
    "chokidar": "^3.5.3",
    "ecma-version-validator-webpack-plugin": "^1.2.1",
    "eslint": "8.18.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-smarthr": "^6.0.7",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-jsx": "^0.36.4",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.7.1",
    "prettier-config-smarthr": "^1.0.0",
    "remark-gfm": "^3.0.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-smarthr": "^1.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "textlint": "^12.2.1",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-plugin-jsx": "^1.1.2",
    "textlint-rule-preset-smarthr": "^1.13.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "4.7.4",
    "uuid": "^8.3.2"
  }
}
